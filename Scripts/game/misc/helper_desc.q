SCRIPT PlayHelperDesc parent = current_menu_anchor helper_pos = PAIR(320, 390) 
	KillSpawnedScript name = PlayHelperDescSequence 
	IF ObjectExists id = current_helper_desc 
		DestroyScreenElement id = current_helper_desc 
	ENDIF 
	SetScreenElementLock id = <parent> off 
	CreateScreenElement { 
		type = ContainerElement 
		parent = <parent> 
		id = current_helper_desc 
		dims = PAIR(640, 0) 
		just = [ center center ] 
		internal_just = [ center center ] 
		pos = <helper_pos> 
	} 
	SetScreenElementLock id = <parent> on 
	FormatText ChecksumName = text_rgba "%i_UNHIGHLIGHTED_TEXT_COLOR" i = ( THEME_COLOR_PREFIXES [ current_theme_prefix ] ) 
	FormatText ChecksumName = bg_rgba "%i_ICON_ON_VALUE" i = ( THEME_COLOR_PREFIXES [ current_theme_prefix ] ) 
	CreateScreenElement { 
		type = TextElement 
		parent = current_helper_desc 
		id = current_helper_desc_string 
		font = small 
		text = " " 
		z_priority = 20 
		just = [ center center ] 
		scale = PAIR(1.2, 1.2) 
		pos = PAIR(320, -5) 
		rgba = [ 128 128 128 50 ] 
	} 
	IF GotParam use_bg 
		CreateScreenElement { 
			type = SpriteElement 
			parent = current_helper_desc 
			texture = white2 
			rgba = <bg_rgba> 
			alpha = 0.10000000149 
			z_priority = 19 
			pos = PAIR(320.00000000000, -5.00000000000) 
			scale = PAIR(80.00000000000, 3.00000000000) 
		} 
	ENDIF 
	IF GotParam helper_desc_elements 
		KillSpawnedScript name = PlayHelperDescSequence 
		SpawnScript PlayHelperDescSequence params = { helper_desc_elements = <helper_desc_elements> } 
	ENDIF 
ENDSCRIPT

SCRIPT PlayHelperDescSequence 
	GetArraySize <helper_desc_elements> 
	<index> = 0 
	BEGIN 
		IF ObjectExists id = current_helper_desc 
			DoScreenElementMorph id = current_helper_desc_string time = 0.30000001192 alpha = 0 
			wait 0.30000001192 seconds 
		ENDIF 
		IF ObjectExists id = current_helper_desc 
			SetScreenElementProps id = current_helper_desc_string text = ( ( ( <helper_desc_elements> ) [ <index> ] ) . string ) 
			DoScreenElementMorph id = current_helper_desc_string time = 1.50000000000 alpha = 0.50000000000 
		ELSE 
			KillSpawnedScript name = PlayHelperDescSequence 
		ENDIF 
		wait 3.00000000000 second 
		IF ( <index> = ( <array_size> -1 ) ) 
			IF GotParam loop 
				<index> = -1 
			ELSE 
				RETURN 
			ENDIF 
		ENDIF 
		<index> = ( <index> + 1 ) 
	REPEAT 
ENDSCRIPT

SCRIPT StopHelperDesc 
	KillSpawnedScript name = PlayHelperDesc 
	KillSpawnedScript name = PlayHelperDescSequence 
	IF ObjectExists id = current_helper_desc 
		DestroyScreenElement id = current_helper_desc 
	ENDIF 
ENDSCRIPT


